---
import type { CollectionEntry } from "astro:content";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import FormattedDate from "@components/FormattedDate.astro";
import HeroImage from "@components/HeroImage.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, cover, coverAlt } =
  Astro.props;

const includeImg = cover && coverAlt;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={cover?.src} />
  </head>
  <body>
    <Header class="header" />
    <main>
      <article>
        <div class="title-container">
          <h1>{title}</h1>
          <div class="date">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <span class="last-updated-on">
                  Last updated on <FormattedDate date={updatedDate} />
                </span>
              )
            }
          </div>
        </div>
        {includeImg && <HeroImage src={cover} alt={coverAlt} class="hero" />}
        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  @import "@styles/mixins.css";

  body {
    @mixin centered-container;
    flex-flow: column nowrap;
    margin-top: 0;
  }

  main {
    @mixin centered-container;
    flex-flow: column nowrap;
    width: var(--page-width);
    margin-bottom: var(--spacer-very-large);
    max-width: var(--max-width-text);
  }

  .prose {
    > :first-child {
      margin-top: var(--spacer-large);
    }
    > h2,
    > h3,
    > h4,
    > h5,
    > h6 {
      margin-top: var(--spacer-large);
      margin-bottom: var(--spacer-small);
    }

    > * {
      margin-bottom: var(--spacer-medium);
    }

    > *:last-child {
      margin-bottom: 0;
    }

    p {
      line-height: var(--line-height-text);
    }
  }

  .title-container {
    display: flex;
    flex-flow: column nowrap;
    margin-bottom: var(--spacer-medium);

    h1 {
      font-size: var(--font-size-title);
      line-height: var(--line-height-header);
      margin-bottom: var(--spacer-small);
    }

    .date {
      display: flex;
      flex-flow: column nowrap;
      align-items: flex-start;
      font-size: var(--font-size-secondary);
      gap: var(--spacer-very-small);

      .last-updated-on {
        font-style: italic;
        color: var(--text-color-secondary);
      }
    }
  }

  .header {
    margin-bottom: var(--spacer-large);

    @mixin tablet {
      margin-bottom: var(--spacer-very-large);
    }
  }
</style>
