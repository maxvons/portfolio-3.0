---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "src/consts";
import BlogCard from "@components/BlogCard.astro";
import Memoji from "@images/memoji.png";
import Img from "@components/Img.astro";
import IconLink from "@components/IconLink.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  metadata={{ title: SITE_TITLE, description: SITE_DESCRIPTION }}
  pageTitle="Maximilian"
  landingPage
>
  <div class="info">
    <div class="avatar-container">
      <Img src={Memoji} alt="Maximilian thinking" class="avatar" />
    </div>
    <div class="social-links">
      <IconLink url="https://x.com/maximilianvons" icon="brand-x" newTab />
      <IconLink url="https://github.com/maxvons" icon="brand-github" newTab />
      <IconLink url="mailto:maximilianvons@gmail.com" icon="mail" newTab />
      <IconLink
        url="/cv-maximilian-von-stephanides.pdf"
        icon="file-cv"
        newTab
      />
    </div>
  </div>
  <div class="posts">
    {
      posts.map((post) => (
        <BlogCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          href={`/blog/${post.slug}`}
        />
      ))
    }
  </div>
</BaseLayout>

<style>
  @import "@styles/mixins.css";

  .info {
    @mixin centered-container;
    flex-flow: column nowrap;
    gap: var(--spacer-medium);
  }

  .avatar-container {
    position: relative;
    height: 105px;
    width: 105px;
    background-color: #d9fff0;
    border-radius: var(--border-radius-round);

    @mixin tablet {
      height: 150px;
      width: 150px;
    }
  }

  .avatar {
    height: 150px;
    width: 150px;
    position: absolute;
    top: 55%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid white;

    img {
      box-shadow: var(--shadow-avatar);
    }

    @mixin tablet {
      height: 200px;
      width: 200px;
    }
  }

  .social-links {
    display: flex;
    gap: var(--spacer-small);
  }

  .posts {
    display: flex;
    flex-flow: column nowrap;
    gap: var(--spacer-medium);
    max-width: var(--max-width-text);
  }

  a {
    text-decoration: none;
  }
</style>
